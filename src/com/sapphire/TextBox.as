package com.sapphire  {	import com.sapphire.ScrollerBase;	import com.sapphire.core.SkinnableUISprite;		import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;
		public class TextBox extends SkinnableUISprite 	{		//skin part		public var scroller:ScrollerBase;		public var textContainer:Sprite;				private var multilineTextDisplay:TextField;				public function TextBox() 		{			// constructor code		}				private var _forceFollowText:Boolean = false;				override protected function initSkinParts():void		{			_skinParts = ['scroller','textContainer'];		}				override protected function partAdded(partName:String):void		{			if (partName == 'scroller')			{				if (textContainer)				{					scroller.contentHolder = textContainer;				}					}						if (partName == 'textContainer')			{				if (scroller)				{					scroller.contentHolder  = textContainer;									}				multilineTextDisplay = textContainer['multilineTextDisplay'] as TextField;				multilineTextDisplay.autoSize = TextFieldAutoSize.LEFT;				multilineTextDisplay.wordWrap = true;				multilineTextDisplay.text = "";			}		}		override protected function partRemoved(partName:String):void		{			if (partName == 'scroller') scroller.contentHolder = null;			if (partName == 'textContainer') multilineTextDisplay = null;		}				public function addText(text:String):void		{			var str:String = text + '\n';			multilineTextDisplay.appendText(str);			scroller.updateContentHolder();			scroller.scrollTo(scroller.maxVerticalScrollPosition);		}	}	}